modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PostgreSQL Database"

[[workflows.workflow]]
name = "Spring Boot API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5 && cd /home/runner/workspace && JAVA_TOOL_OPTIONS=\"-Xmx512m\" ./gradlew --no-daemon bootRun"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "PostgreSQL Database"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p /tmp/postgres_data /run/postgresql 2>/dev/null; chmod 777 /run/postgresql 2>/dev/null; pg_ctl -D /tmp/postgres_data -l /tmp/postgres.log start >/dev/null 2>&1 || true; echo \"PostgreSQL started\"; while true; do sleep 30; done"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5432
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 34659
externalPort = 3002

[userenv]

[userenv.shared]
DATABASE_URL = "jdbc:postgresql://localhost:5432/connect_db"
DB_USER = "postgres"
DB_PASSWORD = "password"

[nix]
channel = "stable-25_05"
packages = ["postgresql"]
