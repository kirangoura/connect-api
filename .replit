modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PostgreSQL Database"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot API"

[[workflows.workflow]]
name = "PostgreSQL Database"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pg_ctl -D /tmp/postgres_data -l /tmp/postgres.log start 2>&1 | grep -v \"another server\"; sleep 2; psql -U postgres -c \"CREATE DATABASE connect_db;\" 2>/dev/null || true; while true; do sleep 10; done"

[[workflows.workflow]]
name = "Spring Boot API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5 && cd /home/runner/workspace && JAVA_TOOL_OPTIONS=\"-Xmx512m\" ./gradlew --no-daemon bootRun"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80

[userenv]

[userenv.shared]
DATABASE_URL = "jdbc:postgresql://localhost:5432/connect_db"
DB_USER = "postgres"
DB_PASSWORD = "password"

[nix]
channel = "stable-25_05"
packages = ["postgresql"]
