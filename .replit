modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PostgreSQL Database"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot API"

[[workflows.workflow]]
name = "PostgreSQL Database"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pg_ctl -D /tmp/postgres_data -l /tmp/postgres.log start"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Spring Boot API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && sleep 3 && JAVA_TOOL_OPTIONS=\"-Xmx512m\" ./gradlew --no-daemon bootRun"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5432
externalPort = 80
exposeLocalhost = true

[userenv]

[userenv.shared]
DATABASE_URL = "jdbc:postgresql://localhost:5432/connect_db"
DB_USER = "postgres"
DB_PASSWORD = "password"

[nix]
channel = "stable-25_05"
packages = ["postgresql"]
